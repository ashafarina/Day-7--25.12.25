class ExamTimer extends Thread {
    public void run() {
        for (int i = 3; i > 0; i--) {
            System.out.println("Time left: " + i);
            try { Thread.sleep(1000); }
            catch (Exception e) {}
        }
        System.out.println("Time up!");
    }
}

public class ExamApp {
    public static void main(String[] args) {
        new ExamTimer().start();
    }
}
